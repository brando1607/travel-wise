generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Transport {
  CAR
  PLANE
  TRAIN
  BUS
}

enum TransportId {
  FLIGHTNUMBER
  PLATENUMBER
  BUSNUMBER
  TRAINNUMBER
}

enum Cabin {
  ECONOMY
  PREMIUM
  BUSINESS
}

enum Status {
  ACTIVE
  EXPIRED
  PENDING
  COMPLETED
  PAST
}

model Bookings {
  id          String   @id @default(uuid())
  passengers  Json[]
  email       String
  phoneNumber String
  itinerary   Json
  bookingCode String
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())

  @@map("bookings")
}

