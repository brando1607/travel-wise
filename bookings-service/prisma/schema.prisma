generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  EXPIRED
  PENDING
  COMPLETED
  PAST
  CANCELLED
  REFUNDED
}

model Bookings {
  bookingCode String      @id
  passengers  Passenger[]
  email       String
  phoneNumber String
  itinerary   Itinerary[]
  status      Status      @default(PENDING)
  createdAt   DateTime    @default(now())

  @@map("bookings")
}

model Passenger {
  id           Int
  bookingCode  String
  name         String
  lastName     String
  country      String
  dateOfBirth  String
  memberNumber Int?

  booking Bookings @relation(fields: [bookingCode], references: [bookingCode])

  @@id([id, bookingCode])
  @@map("passenger")
}

model Itinerary {
  bookingCode  String   @id
  couponNumber Int
  date         String
  origin       String
  destination  String
  cabin        String
  booking      Bookings @relation(fields: [bookingCode], references: [bookingCode])

  @@map("itinerary")
}
