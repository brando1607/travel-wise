generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Transport {
  CAR
  PLANE
  TRAIN
  BUS
}

enum TransportId {
  FLIGHTNUMBER
  PLATENUMBER
  BUSNUMBER
  TRAINNUMBER
}

enum Cabin {
  ECONOMY
  PREMIUM
  BUSINESS
}

enum Status {
  ACTIVE
  EXPIRED
  PENDING
}

model Bookings {
  id          String      @id @default(uuid())
  passengers  Json[]
  email       String
  origin      String
  destination String
  transport   Transport
  transportId TransportId
  date        DateTime
  cabin       Cabin
  bookingCode String
  status      Status      @default(PENDING)
  createdAt   DateTime    @default(now())

  @@map("bookings")
}
